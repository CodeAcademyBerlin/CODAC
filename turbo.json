{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env"],
  "globalEnv": ["NEXT_PUBLIC_CODAC_SERVER_URL", "CODAC_SSG_TOKEN"],
  "pipeline": {
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^build"],
      "persistent": true,
      "env": ["NEXT_PUBLIC_CODAC_SERVER_URL", "CODAC_SSG_TOKEN"]
    },
    "build": {
      "env": ["NEXT_PUBLIC_CODAC_SERVER_URL", "CODAC_SSG_TOKEN"],
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "lint": {
      "outputs": []
    }
  }
}
