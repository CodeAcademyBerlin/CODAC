{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env"],
  "globalEnv": ["NEXT_PUBLIC_CODAC_SERVER_URL", "CODAC_SSG_TOKEN"],
  "pipeline": {
    "clean": {
      "cache": false
    },
    "lint": {},
    "dev": {
      "cache": false,
      "dependsOn": ["^build"],
      "persistent": true,
      "env": ["NEXT_PUBLIC_CODAC_SERVER_URL", "CODAC_SSG_TOKEN"]
    },
    "build": {
      "env": ["NEXT_PUBLIC_CODAC_SERVER_URL", "CODAC_SSG_TOKEN"],
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "storybook:dev": {
      "cache": false,
      "dependsOn": ["^build"],
      "persistent": true
    },
    "storybook:build": {
      "dependsOn": ["^build"],
      "outputs": ["storybook-static/**"]
    },
    "test:e2e": {
      "cache": false,
      "dependsOn": ["^build"]
    },
    "test:unit": {
      "cache": false,
      "dependsOn": ["^build"]
    }
  }
}
