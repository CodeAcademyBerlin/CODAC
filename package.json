{
  "private": true,
  "name": "codac",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/CodeAcademyBerlin/CODAC.git"
  },
  "scripts": {
    "clean": "turbo run clean --no-daemon",
    "dev": "dotenv -- turbo run dev --no-daemon",
    "build": "turbo run build --no-daemon",
    "check": "turbo run check --no-daemon",
    "storybook:dev": "turbo run storybook:dev --no-daemon",
    "storybook:build": "turbo run storybook:build --no-daemon",
    "lint": "turbo run lint --no-daemon",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo run test --no-daemon",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.3",
    "@commitlint/config-conventional": "17.6.3",
    "@storybook/jest": "0.1.0",
    "@storybook/react": "7.0.9",
    "@storybook/testing-library": "0.1.0",
    "@testing-library/react": "14.0.0",
    "@testing-library/user-event": "14.4.3",
    "@types/jest": "29.5.1",
    "@types/node": "18.16.6",
    "@types/react": "18.2.6",
    "@types/react-dom": "18.2.4",
    "@types/testing-library__jest-dom": "5.14.5",
    "dotenv-cli": "^7.2.1",
    "eslint": "8.40.0",
    "eslint-config-custom": "workspace:*",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "lint-staged": "13.2.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.8",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "ts-jest": "^29.1.0",
    "turbo": "latest",
    "typescript": "^5.0.4"
  },
  "packageManager": "pnpm@8.4.0"
}
